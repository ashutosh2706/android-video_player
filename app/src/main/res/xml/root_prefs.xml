<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="Preferences">

        <ListPreference
            app:defaultValue="dark"
            app:entries="@array/theme_entries"
            app:entryValues="@array/theme_values"
            app:key="theme"
            app:title="App Theme"
            app:useSimpleSummaryProvider="true" />

        <SwitchPreferenceCompat
            app:title="Resume Playback"
            app:key="resume_play"
            app:summary="Play videos from their last position"
            app:defaultValue="false"/>

        <SwitchPreferenceCompat
            app:title="Force Landscape"
            app:key="autoRotate"
            app:defaultValue="false"/>

        <SwitchPreferenceCompat
            app:title="PIP Mode"
            app:key="pip"
            app:summary="Use picture-in-picture mode for background playback"
            app:defaultValue="false"/>
    </PreferenceCategory>

</PreferenceScreen>
